{
  "name": "notepad",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev --experimental-https",
    "dx": "pnpm db-up && pnpm db-migrate-dev && pnpm db-seed && pnpm dev",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "prisma migrate dev",
    "deploy-gh-pages": "git push origin :gh-pages && git subtree push --prefix dist origin gh-pages",
    "dev-nuke": "rm -rf prisma/*.db**",
    "generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "lint": "next lint",
    "lint-fix": "pnpm lint --fix",
    "migrate": "prisma migrate deploy",
    "migrate-dev": "prisma migrate dev",
    "start": "next start",
    "studio": "prisma studio",
    "test": "playwright test",
    "test-ct": "playwright test -c playwright-ct.config",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --write .",
    "setup-husky": "npx husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "postinstall": "pnpm generate"
  },
  "dependencies": {
    "@auth/upstash-redis-adapter": "^1.0.7",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.6.0",
    "@tanstack/react-query": "^4.29.19",
    "@trpc/client": "^10.34.0",
    "@trpc/next": "^10.34.0",
    "@trpc/react-query": "^10.34.0",
    "@trpc/server": "^10.34.0",
    "@upstash/redis": "^1.25.1",
    "allotment": "^1.19.3",
    "axios": "^1.6.2",
    "codemirror": "^6.0.1",
    "csp-header": "^5.2.1",
    "dayjs": "^1.11.10",
    "framer-motion": "^10.16.5",
    "jotai": "^2.5.1",
    "next": "^14.0.3",
    "next-auth": "^4.24.5",
    "react": "18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-codemirror2": "^7.3.0",
    "react-dom": "18.2.0",
    "react-feather": "^2.0.10",
    "react-markdown": "^9.0.1",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "superjson": "2.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/prompt-cli": "^18.4.3",
    "@playwright/test": "^1.40.0",
    "@types/codemirror": "^5.60.15",
    "@types/eslint": "^8.44.7",
    "@types/node": "^20.10.0",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.38",
    "@types/react-beautiful-dnd": "^13.1.7",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^5.6.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2"
  },
  "ct3aMetadata": {
    "initVersion": "7.10.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  }
}
