{
  "name": "notepad",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev --experimental-https",
    "deploy-gh-pages": "git push origin :gh-pages && git subtree push --prefix dist origin gh-pages",
    "lint": "next lint",
    "lint-fix": "pnpm lint --fix",
    "start": "next start",
    "test": "playwright test",
    "test-ct": "playwright test -c playwright-ct.config",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --write .",
    "setup-husky": "npx husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:drop": "drizzle-kit drop:pg",
    "db:push": "drizzle-kit push:pg",
    "db:pull": "drizzle-kit introspect:pg",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check:pg",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@auth/core": "^0.24.0",
    "@auth/drizzle-adapter": "^0.4.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.3.4",
    "@octokit/plugin-create-or-update-text-file": "^4.0.1",
    "@octokit/plugin-request-log": "^4.0.0",
    "@octokit/plugin-retry": "^6.0.1",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@t3-oss/env-nextjs": "^0.8.0",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "csp-header": "^5.2.1",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "framer-motion": "^11.0.3",
    "jotai": "^2.6.4",
    "lucide-react": "^0.321.0",
    "next": "^14.1.0",
    "next-auth": "5.0.0-beta.5",
    "next-themes": "^0.2.1",
    "octokit": "^3.1.2",
    "postgres": "^3.4.3",
    "react": "18.2.0",
    "react-hook-form": "^7.50.0",
    "react-resizable-panels": "^1.0.10",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@commitlint/prompt-cli": "^18.6.0",
    "@faker-js/faker": "^8.4.0",
    "@playwright/test": "^1.41.2",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.11.16",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.17",
    "dotenv": "^16.4.1",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.10",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.1",
    "pg": "^8.11.3",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  }
}
