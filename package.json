{
  "name": "notepad",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "dx": "pnpm db-up && pnpm db-migrate-dev && pnpm db-seed && pnpm dev",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "prisma migrate dev",
    "deploy-gh-pages": "git push origin :gh-pages && git subtree push --prefix dist origin gh-pages",
    "dev-nuke": "rm -rf prisma/*.db**",
    "generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "lint": "next lint",
    "lint-fix": "pnpm lint --fix",
    "migrate": "prisma migrate deploy",
    "migrate-dev": "prisma migrate dev",
    "start": "next start",
    "studio": "prisma studio",
    "test": "playwright test",
    "test-ct": "playwright test -c playwright-ct.config",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --write .",
    "setup-husky": "npx husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "postinstall": "pnpm generate"
  },
  "dependencies": {
    "@auth/upstash-redis-adapter": "^1.0.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^4.16.2",
    "@tanstack/react-query": "^4.29.19",
    "@trpc/client": "^10.34.0",
    "@trpc/next": "^10.34.0",
    "@trpc/react-query": "^10.34.0",
    "@trpc/server": "^10.34.0",
    "@upstash/redis": "^1.22.0",
    "allotment": "^1.19.0",
    "axios": "^1.4.0",
    "codemirror": "^5.65.13",
    "csp-header": "^5.1.0",
    "dayjs": "^1.11.9",
    "framer-motion": "^10.12.20",
    "jotai": "^2.2.2",
    "next": "^13.4.9",
    "next-auth": "^4.22.1",
    "react": "18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-codemirror2": "^7.2.1",
    "react-dom": "18.2.0",
    "react-feather": "^2.0.10",
    "react-markdown": "^8.0.7",
    "rehype-sanitize": "^5.0.1",
    "remark-gfm": "^3.0.1",
    "superjson": "1.12.3",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/prompt-cli": "^17.6.6",
    "@playwright/test": "^1.36.0",
    "@types/codemirror": "^5.60.8",
    "@types/eslint": "^8.44.0",
    "@types/node": "^20.4.2",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.14",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.14",
    "clsx": "^2.0.0",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.9",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.25",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "prisma": "^4.16.2",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "ct3aMetadata": {
    "initVersion": "7.10.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  }
}
