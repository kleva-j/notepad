{
	"name": "notepad",
	"version": "0.1.1",
	"private": true,
	"packageManager": "pnpm@9.1.2",
	"scripts": {
		"build": "next build",
		"dev": "next dev --experimental-https",
		"deploy-gh-pages": "git push origin :gh-pages && git subtree push --prefix dist origin gh-pages",
		"lint": "next lint",
		"lint-fix": "pnpm lint --fix",
		"start": "next start",
		"test": "playwright test",
		"test-ct": "playwright test -c playwright-ct.config",
		"prepare": "is-ci || husky install",
		"prettier": "prettier --write .",
		"setup-husky": "npx husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx}\""
	},
	"dependencies": {
		"@hookform/resolvers": "^3.3.4",
		"@octokit/plugin-create-or-update-text-file": "^4.0.1",
		"@octokit/plugin-request-log": "^4.0.0",
		"@octokit/plugin-retry": "^6.0.1",
		"@t3-oss/env-nextjs": "^0.8.0",
		"axios": "^1.6.7",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.0",
		"csp-header": "^5.2.1",
		"framer-motion": "^11.0.5",
		"jotai": "^2.6.4",
		"lucide-react": "^0.323.0",
		"next": "^14.1.0",
		"next-themes": "^0.2.1",
		"octokit": "^3.1.2",
		"react": "18.2.0",
		"react-hook-form": "^7.50.1",
		"tailwind-merge": "^2.2.1",
		"tailwindcss-animate": "^1.0.7",
		"usehooks-ts": "^2.14.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.2",
		"@commitlint/prompt-cli": "^18.6.1",
		"@faker-js/faker": "^8.4.1",
		"@playwright/test": "^1.41.2",
		"@tailwindcss/typography": "^0.5.10",
		"@types/eslint": "^8.56.2",
		"@types/node": "^20.11.19",
		"@types/prettier": "^3.0.0",
		"@types/react": "^18.2.57",
		"@types/react-dom": "^18.2.19",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"autoprefixer": "^10.4.17",
		"dotenv": "^16.4.4",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.54.0",
		"eslint-config-next": "^14.1.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.33.2",
		"husky": "^9.0.11",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.2",
		"pg": "^8.11.3",
		"postcss": "^8.4.35",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"tailwindcss": "^3.4.1",
		"tsx": "^4.7.1",
		"typescript": "^5.3.2"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint . --fix",
			"prettier --write",
			"git add"
		]
	}
}
